<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="5dp" android:top="0dp">
                <shape>
                    <corners android:radius="100dp" />
                    <gradient
                        android:centerX="70%"
                        android:startColor="#105312"
                        android:centerColor="#105312"
                        android:endColor="#105312"
                        android:type="linear"
                        />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="6dp" android:right="10dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="100dp"
                        />
                    <gradient
                        android:angle="90"
                        android:centerX="30%"
                        android:centerColor="@color/btnGo"
                        android:startColor="#3BF686"
                        android:endColor="@color/btnGo"
                        android:type="linear"
                        />
                    <size
                        android:width="50dp"
                        android:height="50dp"
                        />
                    <stroke
                        android:width="1dp"
                        android:color="#3BF686"
                        />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="6dp" android:right="10dp" android:top="5dp">
                <shape android:layout_height="wrap_content" android:shape="rectangle">
                    <corners android:radius="100dp" />

                    <gradient android:angle="90" android:centerColor="@color/btnGo" android:centerX="70%" android:endColor="#3BF686" android:startColor="@color/btnGo" android:type="linear" />

                    <size android:width="50dp" android:height="50dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#3BF686"
                        />
                </shape>
            </item>
            <!-- the glow for the half circles, possible with radius as well. I liked
                 android:type="sweep" better because radius tends to fade out.-->
            <item android:bottom="5dp" android:left="6dp" android:right="10dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="100dp"
                        />

                    <gradient
                        android:angle="360"
                        android:centerX="5%"
                        android:centerColor="#3BF686"
                        android:startColor="@color/btnGo"
                        android:endColor="@color/btnGo"
                        android:gradientRadius="360"
                        android:type="sweep"
                        />

                    <size
                        android:width="50dp"
                        android:height="50dp"
                        />
                    <stroke
                        android:width="1dp"
                        android:color="#3BF686"
                        />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="6dp" android:right="10dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="150dp"
                        />

                    <gradient
                        android:angle="360"
                        android:centerX="50%"
                        android:centerColor="@color/btnGo"
                        android:startColor="#3BF686"
                        android:endColor="#3BF686"
                        android:gradientRadius="360"
                        android:type="sweep"
                        />

                    <size
                        android:width="50dp"
                        android:height="50dp"
                        />
                    <stroke
                        android:width="1dp"
                        android:color="#3BF686"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>