    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/usrstat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simpleBackground"
    tools:context=".UserStatus">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/userdinoicon"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/chakra_petch_medium_italic"
                        android:textSize="30dp"
                        android:layout_marginTop="15dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="75dp"
                        android:layout_height="20dp"
                        android:outlineAmbientShadowColor="@color/beginnerstatglow"
                        android:outlineSpotShadowColor="@color/beginnerstatglow"
                        app:cardBackgroundColor="@color/beginnerstatglow"
                        app:cardElevation="20dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="37dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="15dp"
                            app:cardCornerRadius="8dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/beginnerstat">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="10dp"
                                android:fontFamily="@font/chakra_petch_medium_italic"
                                android:textColor="@color/timerglow"
                                android:textAlignment="center"
                                android:text="BEGINNER"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:outlineAmbientShadowColor="@color/dotgreen"
                    android:outlineSpotShadowColor="@color/dotgreen"
                    app:cardBackgroundColor="@color/dotgreen"
                    app:cardElevation="20dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="190dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="@color/timerglow">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="ACHIEVEMENTS"
                            android:fontFamily="@font/chakra_petch_medium_italic"
                            android:textSize="20dp"
                            android:textAlignment="center"/>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="80dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/easyLevelStatus">
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="70dp">
